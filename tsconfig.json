{
  "compilerOptions": {
    "target": "es6",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include" : [
    "src/**/*.ts"   /* Include every ts file in source folder */
  ],
  "exclude": [
    "node_modules"
  ],
  "files": [
    "./src/utils/types.d.ts"
  ],
  "scripts": {
    "start": "ts-node src/server.ts",
    "dev": "nodemon -x ts-node src/server.ts"
},
}